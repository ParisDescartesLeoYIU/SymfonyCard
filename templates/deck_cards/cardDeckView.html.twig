<title>Deck :{{ deck.name }}</title>
<style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% block body %}

    <div id="list">
        <div class="list-card">
            <h1>Deck : {{ deck.name }}</h1>

                {% if deckcards is defined %}

                <h2> Card in Deck</h2>

                <div class="containerCard">
                {% for deckcard in deckcards %}

                    <a href="{{ path("remove_deckcard", {id: deckcard.id}) }}">
                        {% if deckcard.card.rarity == "legendary"  %}
                            <div  class="card" id="legendary">
                        {% elseif deckcard.card.rarity == "gold"  %}
                            <div class="card" id="gold">
                        {% elseif deckcard.card.rarity == "silver"  %}
                             <div class="card" id="silver">
                        {% else%}
                            <div class="card" id="bronze">
                        {% endif %}
                        <div class="cardHeader">
                            <span> {{ deckcard.card.name }} </span>
                            <span> ( {{ deckcard.card.faction.name }} ) </span>
                        </div>
                        <div class="cardImage"  style="background-image: url('/uploads/img/{{deckcard.card.image}}'); background-size: cover; background-repeat: no-repeat;background-position: center center; "></div>
                        <div class="cardFooter">
                            <div class="cardMana" style="color:white"> {{ deckcard.card.mana }} </div>
                            <div class="cardHealth" style="color:white">  {{ deckcard.card.health }} </div>
                            <div class="cardAtk" style="color:white"> {{ deckcard.card.atk }} </div>
                        </div>
                    </div>
                </a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <h2> Card</h2>
    <div class="containerCard">
                {% for card in  cards %}
                <a class="cardImage" href="{{ path("set_deck", {id_deck: deck.id, id_card: card.id}) }}">
                    {% if card.rarity == "legendary"  %}
                        <div  class="card" id="legendary">
                    {% elseif card.rarity == "gold"  %}
                        <div class="card" id="gold">
                    {% elseif card.rarity == "silver"  %}
                        <div class="card" id="silver">
                    {% else%}
                        <div class="card" id="bronze">
                    {% endif %}
                        <div class="cardHeader">
                            <span> {{ card.name }} </span>
                            <span> ( {{ card.faction.name }} ) </span>
                        </div>
                        <div class="cardImage"  style="background-image: url('/uploads/img/{{card.image}}'); background-size: cover; background-repeat: no-repeat;background-position: center center; "></div>
                        <div class="cardFooter">
                            <div class="cardMana" style="color:white"> {{ card.mana }} </div>
                            <div class="cardHealth" style="color:white">  {{ card.health }} </div>
                            <div class="cardAtk" style="color:white"> {{ card.atk }} </div>
                        </div>
                    </div>
                </a>
                {% endfor %}
    </div>

{% endblock %}