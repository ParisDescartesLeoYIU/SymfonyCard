        <div style="float: right">
            <a href="{{ path('app_login') }}">Sign in</a>
            <a href="{{ path('app_register') }}">Sign up</a>
        </div>
    {% endif %}
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}

    {% endblock %}

    </body>
