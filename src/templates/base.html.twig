    <body>

    {#    ajout des navbar de Bootswatch#}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">


        <div class="collapse navbar-collapse" id="navbarColor02">

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="{{ path('add_card') }}" class="navbar-brand">Add Card</a>
                    <a href="{{ path('add_faction') }}" class="navbar-brand">Add Faction</a>
                    <a href="{{ path('card') }}" class="navbar-brand">Show Card</a>
                    <a href="{{ path('faction') }}" class="navbar-brand">Show Faction</a>
